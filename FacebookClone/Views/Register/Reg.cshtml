@model FacebookClone.ViewModels.RegisterReg

@{
    ViewBag.Title = "reg";

}

    <div class="container yazi">
        <div class="row">
            <div class="col-md-6">
                <h4 class="display-4 mt-1"><u>Kayıt Ol!</u></h4>

                <!-- register form -->

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary()


                    <div class="form-group">

                        <label>Kullanıcı Adı</label> @Html.TextBoxFor(x => x.Kadi, new { @class = "form-control" })
                    </div>

                    <div class="form-group">

                        <label>Parola</label> @Html.PasswordFor(x => x.Parola, new { @class = "form-control" })
                    </div>

                    <div class="form-group">

                        <label>Email</label> @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>

                    <div class="form-group">

                        <label>Ad</label> @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                    </div>

                    <div class="form-group">

                        <label>Soyad</label> @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
                    </div>
                    <div class="form-group">

                        <label>Telefon Numarası</label> @Html.TextBoxFor(x => x.Telno , new { @class = "form-control" })
                    </div>

                    <div>
                        <input type="submit" value="Kaydol" class="btn btn-outline-primary" />
                    </div>
                }

                <!-- ./register form -->
            </div>
            <div class="col-md-6">
                <img src="~/Content/img/register.svg" class="mt-3" alt="Alternate Text" />
            </div>
        </div>
    </div>



