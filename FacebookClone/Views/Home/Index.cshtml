@model FacebookClone.ViewModels.HomeIndex
<!-- main -->
<div class="container">
    <h1 class="text-center display-3 mt-1"><u>Welcome to FaceClone!</u> </h1>

    <div class="row">

        <div class="col-md-6">
            <!-- login form -->

            <h4 class="display-4 mt-1"><u>Giriş Yap</u></h4>

            @using (Html.BeginForm())
            {
                @Html.ValidationSummary()
                <div class="form-group">
                   @Html.TextBoxFor(x => x.kadi, new { @class = "form-control" , placeholder="Kullanıcı Adı"})
                </div>

                <div class="form-group">
                   @Html.PasswordFor(x => x.parola, new { @class = "form-control" , placeholder="Parola" })
                </div>

                <div class="form-group">
                    <input class="btn btn-outline-primary" type="submit" name="login" value="Login" />
                </div>

            }
            <label>Hesabınız Yok mu? Kaydolun.</label>
            <a href="@Url.RouteUrl("reg")"> <input class="btn btn-outline-primary" type="submit" name="Kaydol" value="Kaydol" /></a>


            <!-- ./login form -->
        </div>
        <div class="col-md-6">
            <img src="~/Content/img/group.svg" class="mt-5 ml-5" width="300" alt="group" />
        </div>

    </div>
</div>
<!-- ./main -->
